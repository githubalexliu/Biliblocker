{
  "manifest_version": 2,
  "name": "Biliblocker",
  "version": "0.1.0",
  "description": "Block images on bilibili.com.",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_title": "Biliblocker",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}

