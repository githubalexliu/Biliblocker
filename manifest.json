{
  "manifest_version": 2,
  "name": "Biliblocker",
  "version": "0.1.0",
  "description": "Block images on bilibili.com.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.bilibili.com/*"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}

